{
    "extends": ["eslint:recommended", "google"],
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 6
    },
    "env": {
      "browser": true
    },
    "plugins": [
      "html"
    ],
    "rules": {
      "brace-style": "off",
      "new-cap": ["error", { "capIsNewExceptions": ["Polymer"] }],
      "no-var": "off",
      "require-jsdoc": "off",
      "max-len": ["error", { "code": 120 }]
    },
    "globals": {
      "Polymer": true
    }
  }
  